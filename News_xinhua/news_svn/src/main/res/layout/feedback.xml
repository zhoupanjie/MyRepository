<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/nv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/red_xuanwen"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_back"
                style="@style/back_red_style"
                android:drawableLeft="@drawable/arrow_left_white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/publish_feed_title"
                android:textColor="@color/white"
                android:textSize="@dimen/logintitle" />

            <TextView
                android:id="@+id/publish_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:text="@string/publish_feed"
                android:textColor="@color/white"
                android:textSize="@dimen/logintitle" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/flag_content_dividing_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/publish_mood_layout_bg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/publish_feed_edit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:minHeight="150dp"
            android:hint="请留下您的宝贵意见！"
            android:background="@null"
            android:gravity="left|top" >
        </EditText>
    </LinearLayout>

</LinearLayout>