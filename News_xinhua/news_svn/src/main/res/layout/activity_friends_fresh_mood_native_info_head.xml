<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <com.cplatform.xhxw.ui.ui.base.widget.CircleImageView
                    android:id="@+id/fresh_mood_info_user_logo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop" >
                </com.cplatform.xhxw.ui.ui.base.widget.CircleImageView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/fresh_mood_info_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/commentary_name_color"
                    android:textSize="@dimen/event_richeng_list_time" />

                <TextView
                    android:id="@+id/fresh_mood_info_user_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/event_richeng_list_time" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hds_login_margin"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fresh_mood_info_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <View
                        android:layout_width="@dimen/hds_small_margin"
                        android:layout_height="1px" />

                    <ImageView
                        android:id="@+id/fresh_mood_info_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <View
                        android:layout_width="@dimen/hds_small_margin"
                        android:layout_height="1px" />

                    <ImageView
                        android:id="@+id/fresh_mood_info_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hds_small_margin"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/fresh_mood_info_forth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <View
                        android:layout_width="@dimen/hds_small_margin"
                        android:layout_height="1px" />

                    <ImageView
                        android:id="@+id/fresh_mood_info_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <View
                        android:layout_width="@dimen/hds_small_margin"
                        android:layout_height="1px" />

                    <ImageView
                        android:id="@+id/fresh_mood_info_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/hds_login_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fresh_mood_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/freshs_mood_info_time" />

                <TextView
                    android:id="@+id/fresh_mood_info_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:singleLine="true"
                    android:text="删除"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fresh_mood_info_time"
                    android:textColor="@color/freshs_mood_info_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/fresh_mood_info_commentary_option"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_commentary_option" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="14dp"
            android:layout_height="7dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_commentary_arrow" 
            />

        <LinearLayout
            android:id="@+id/parisa_layout"
            android:layout_width="fill_parent"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/parisa_tubiao_comment_tubiao_size"
                android:layout_height="@dimen/parisa_tubiao_comment_tubiao_size"
                android:layout_marginLeft="@dimen/parisa_margin_left"
                android:layout_marginRight="@dimen/parisa_margin_right"
                android:src="@drawable/freshs_mood_info_xinxing"/>

            <LinearLayout
                android:id="@+id/parisa_person_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/ly_like_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="#DDDEE0"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>