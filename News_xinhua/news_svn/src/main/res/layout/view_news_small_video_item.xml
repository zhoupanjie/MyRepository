<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/base_listitem_total_height"
                style="@style/base_list_item_style">

    <RelativeLayout 
        android:id="@+id/small_video_img_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/base_listitem_img_padding"
        android:layout_marginTop="6dp">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/base_listitem_img_width"
            android:layout_height="@dimen/base_listitem_img_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/def_img_4_3"
            android:scaleType="fitXY"/>
        <ImageView android:layout_width="30dp" 
	        android:layout_centerInParent="true"
	        android:layout_height="30dp"
	        android:layout_marginLeft="20dp"
	        android:src="@drawable/video_play_btn"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/news_item_text_area_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/small_video_img_lo"
        android:paddingBottom="10dp" >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top|left|center"
            android:lineSpacingExtra="3.0dip"
            android:textAppearance="@style/base_list_title_style"/>

	    <TextView
            android:id="@+id/tv_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:lineSpacingExtra="2.0dip"
            android:maxLines="2"
            android:minLines="1"
            android:textAppearance="@style/base_list_desc_style"/>
    </RelativeLayout>

    <TextView 
        android:id="@+id/new_item_divider_tv"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignLeft="@+id/news_item_text_area_lo"
        android:layout_alignParentBottom="true"
        android:background="#d9d9d9"/>
</RelativeLayout>