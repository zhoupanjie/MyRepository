<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextureView 
	    android:id="@+id/video_v_player_tv"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>

	<RelativeLayout
	    android:id="@+id/video_control_lo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp" >
	    
	    <ImageView
	        android:id="@+id/video_control_play_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/arrow_right" />

	    <ImageView
	        android:id="@+id/video_control_rotate_iv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_invite" />

	    <SeekBar
	        android:id="@+id/video_control_seekbar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_toLeftOf="@+id/video_control_time_tv"
	        android:layout_toRightOf="@+id/video_control_play_btn" />

	    <TextView
	        android:id="@+id/video_control_time_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="5dp"
	        android:layout_toLeftOf="@+id/video_control_rotate_iv"
	        android:text="00:00" />

	</RelativeLayout>

	<ImageView
	    android:id="@+id/video_close_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:src="@drawable/button_clear" />

</RelativeLayout>
