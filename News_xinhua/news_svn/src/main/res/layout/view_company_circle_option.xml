<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/ly_bg"
              android:paddingLeft="0dp"
              android:paddingRight="40dp">
    <LinearLayout android:layout_width="60.5dp" android:layout_height="27dp"
                  android:background="@drawable/ic_bg_guanzhu"
                  android:id="@+id/ly_like"
                  android:gravity="center"
                  android:orientation="horizontal">
        <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/btn_option_like"
                   android:id="@+id/btn_like"/>
        <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12dp" android:textColor="@color/black"
                  android:layout_marginLeft="5dp" android:text="赞"/>
    </LinearLayout>
    <LinearLayout android:layout_width="60.5dp" android:layout_height="27dp"
                  android:background="@drawable/ic_bg_pinglun"
                  android:gravity="center"
                  android:id="@+id/ly_commentary"
                  android:orientation="horizontal">
        <ImageView android:layout_width="14dp" android:layout_height="14dp"
                   android:src="@drawable/btn_option_commentary"
                   android:id="@+id/btn_commentary"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="12dp" android:textColor="@color/black"
                  android:layout_marginLeft="5dp" android:text="评论"/>
    </LinearLayout>


</LinearLayout>