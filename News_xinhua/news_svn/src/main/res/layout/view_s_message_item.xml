<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="63dp" android:paddingLeft="12dp"
                    android:paddingRight="10dp">
        <RelativeLayout android:layout_width="match_parent"
                        android:paddingTop="3dp"
                        android:layout_centerVertical="true"
                        android:paddingBottom="3dp"
                        android:layout_height="wrap_content">
            <com.cplatform.xhxw.ui.ui.base.widget.CircleImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/s_msg_user_def"/>

            <RelativeLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:layout_marginLeft="12dp"
                    android:layout_alignTop="@+id/iv_logo" android:layout_alignBottom="@+id/iv_logo">

                <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tv_num"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" android:id="@+id/linearLayout">
                    <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:maxLines="1"
                            android:textSize="15dp"
                            android:text="MvBen"
                            android:textColor="@color/black"/>
                    <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/tv_last_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="你发出了一条消息"
                            android:textColor="#787878"
                            android:textSize="14.0dp" />
                </LinearLayout>

                <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4.0dip"
                        android:text="12日"
                        android:textColor="#a3a3a3"
                        android:textSize="12dp" android:layout_alignTop="@+id/linearLayout"/>


                <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:background="@drawable/ic_msg_new_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical" android:layout_alignBottom="@+id/linearLayout"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>