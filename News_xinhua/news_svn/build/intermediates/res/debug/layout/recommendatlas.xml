<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/recommend_linear_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#50000000"
                android:layout_marginRight="@dimen/image_distance" >

                <ImageView
                    android:id="@+id/recommendatlas_first"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_test" />

                <TextView
                    android:id="@+id/recommendtext_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/recommendatlas_first"
                    android:layout_alignRight="@+id/recommendatlas_first"
                    android:layout_below="@+id/recommendatlas_first"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="@string/test_nickname"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/recommend_linear_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#50000fff" >

                <ImageView
                    android:id="@+id/recommendatlas_second"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_test" />

                <TextView
                    android:id="@+id/recommendtext_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/recommendatlas_second"
                    android:layout_alignRight="@+id/recommendatlas_second"
                    android:layout_below="@+id/recommendatlas_second"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="@string/test_nickname"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="@dimen/image_distance"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/recommend_linear_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#50fff000"
                android:layout_marginRight="@dimen/image_distance">

                <ImageView
                    android:id="@+id/recommendatlas_third"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_test" />

                <TextView
                    android:id="@+id/recommendtext_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/recommendatlas_third"
                    android:layout_alignRight="@+id/recommendatlas_third"
                    android:layout_below="@+id/recommendatlas_third"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="@string/test_nickname"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/recommend_linear_forth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#50f0f0f0" >

                <ImageView
                    android:id="@+id/recommendatlas_forth"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_test" />

                <TextView
                    android:id="@+id/recommendtext_forth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/recommendatlas_forth"
                    android:layout_alignRight="@+id/recommendatlas_forth"
                    android:layout_below="@+id/recommendatlas_forth"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="@string/test_nickname"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

