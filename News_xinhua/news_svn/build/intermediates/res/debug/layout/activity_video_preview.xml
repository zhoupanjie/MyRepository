<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >
    

    <LinearLayout
	    android:id="@+id/video_preview_title_lo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height" 
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/nv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue" >

            <Button
                android:id="@+id/btn_back"
                style="@style/back_gray_style"
                android:drawableLeft="@drawable/arrow_left_white" />

            <TextView
                android:id="@+id/news_collect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="@string/video_record_preview"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/flag_content_dividing_line" />
    </LinearLayout>
    
    <com.skd.androidrecording.video.AdaptiveSurfaceView
        android:id="@+id/video_preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_preview_title_lo"
        android:layout_centerInParent="true" />
</RelativeLayout>
