<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height" >

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/saas_titl_btn_cancel_bg"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/saas_setting_msg_center"
            android:textSize="@dimen/base_list_title_text_size" />
    </RelativeLayout>
    
    <com.cplatform.xhxw.ui.ui.base.view.PagerSlidingTabStrip
        android:id="@+id/saas_my_pushmsg_tabbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#DCDCDC" />
    
    <android.support.v4.view.ViewPager
	    android:id="@+id/saas_my_pushmsg_vp"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" />

