<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="9dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <RelativeLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="9dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                <com.cplatform.xhxw.ui.ui.base.widget.CircleImageView
                        android:id="@+id/event_meeting_record_item_image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop">
                </com.cplatform.xhxw.ui.ui.base.widget.CircleImageView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/event_meeting_record_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textStyle="bold"
                        android:textColor="@color/commentary_name_color"
                        android:textSize="@dimen/event_richeng_list_time"/>

                <TextView
                        android:id="@+id/event_meeting_record_item_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/event_richeng_list_time"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ly_imgs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="6dp"
                            android:id="@+id/event_meeting_record_item_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    <View
                            android:layout_width="@dimen/hds_small_margin"
                            android:layout_height="0dp"/>

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="6dp"
                            android:id="@+id/event_meeting_record_item_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    <View
                            android:layout_width="@dimen/hds_small_margin"
                            android:layout_height="0dp"/>

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="6dp"
                            android:id="@+id/event_meeting_record_item_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/hds_small_margin"
                            android:id="@+id/event_meeting_record_item_forth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    <View
                            android:layout_width="@dimen/hds_small_margin"
                            android:layout_height="0dp"/>

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/hds_small_margin"
                            android:id="@+id/event_meeting_record_item_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    <View
                            android:layout_width="@dimen/hds_small_margin"
                            android:layout_height="0dp"/>

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/hds_small_margin"
                            android:id="@+id/event_meeting_record_item_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/hds_small_margin"
                            android:id="@+id/event_meeting_record_item_seven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    <View
                            android:layout_width="@dimen/hds_small_margin"
                            android:layout_height="0dp"/>

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/hds_small_margin"
                            android:id="@+id/event_meeting_record_item_eight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    <View
                            android:layout_width="@dimen/hds_small_margin"
                            android:layout_height="0dp"/>

                    <ImageView
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/hds_small_margin"
                            android:id="@+id/event_meeting_record_item_nine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/event_meeting_record_item_time"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:textColor="@color/commentary_time_color"/>
                <ImageView android:layout_width="24.5dp" android:layout_gravity="right" android:layout_height="16dp"
                           android:src="@drawable/btn_commentary_option"
                           android:id="@+id/btn_commentary_option"/>
            </LinearLayout>
            <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="15dp" android:layout_width="14dp" android:layout_height="7dp"
                       android:src="@drawable/ic_commentary_arrow"
                       android:id="@+id/ly_comments_arrow"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="6dp"
                          android:id="@+id/ly_comments_content"
                          android:background="@drawable/ic_commentary_bg">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center_vertical" android:id="@+id/ly_like">
                    <ImageView android:layout_width="12dp" android:layout_height="12dp"
                               android:src="@drawable/ic_option_like_focus"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:text="0人觉得很赞" android:id="@+id/tv_num_zan"
                            android:textColor="@color/commentary_name_color"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="@dimen/one_px"
                      android:layout_marginTop="4.5dp"
                      android:visibility="gone"
                      android:background="#e2e7eb" android:id="@+id/ly_like_line"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:id="@+id/ly_comments"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/rangey/MyRepository/News_xinhua/news_svn/src/main/res/layout/fragment_company_zone_item.xml -->