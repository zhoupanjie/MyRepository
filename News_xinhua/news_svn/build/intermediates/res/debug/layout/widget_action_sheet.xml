<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4b4b51"
                android:gravity="center"
                android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/menu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:dividerHeight="8dp"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:smoothScrollbar="true"
                android:visibility="gone" >
        </ListView>
    </LinearLayout>

    <Button
            android:id="@+id/popup_menu_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/menu_container"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="20sp" />

</RelativeLayout><!-- From: file:/Users/rangey/MyRepository/News_xinhua/news_svn/src/main/res/layout/widget_action_sheet.xml -->