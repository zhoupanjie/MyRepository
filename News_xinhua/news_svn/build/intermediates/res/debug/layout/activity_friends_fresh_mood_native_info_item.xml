<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tubiao_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tubiao"
            android:layout_width="@dimen/parisa_tubiao_comment_tubiao_size"
            android:layout_height="@dimen/parisa_tubiao_comment_tubiao_size"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/freshs_mood_info_pinglun"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/parisa_margin_left"
             android:minHeight="51dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.cplatform.xhxw.ui.ui.base.widget.CircleImageView
                        android:id="@+id/user_logo"
                        android:layout_width="@dimen/parisa_user_logo_size"
                        android:layout_height="@dimen/parisa_user_logo_size"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
            	android:layout_marginBottom="8dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="9dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="" />

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/freshs_mood_info_time"
                            android:text="" />

                        <TextView
                            android:id="@+id/delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="删除"
                            android:visibility="gone" 
                            android:textColor="@color/freshs_mood_info_delete"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <View 
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#DDDEE0"/><!-- #F0F1F3 -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/rangey/MyRepository/News_xinhua/news_svn/src/main/res/layout/activity_friends_fresh_mood_native_info_item.xml -->