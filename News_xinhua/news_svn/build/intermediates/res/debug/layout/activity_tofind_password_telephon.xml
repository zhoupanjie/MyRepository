<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/nv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/red_xuanwen"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_back"
                style="@style/back_red_style"
                android:drawableLeft="@drawable/arrow_left_white" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/find_password_title"
                android:textColor="@color/white"
                android:textSize="@dimen/logintitle" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/flag_content_dividing_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp" 
        android:gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_password_telephon_now"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/editheight"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/editheight"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/register_edittext_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/editheight"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:src="@drawable/register_icon_phone" />

            <EditText
                android:id="@+id/to_find_telephon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="@string/register_telephon_code_hint"
                android:singleLine="true"
                android:textSize="@dimen/login_Size_edittext" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="@dimen/editheight"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/to_find_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/to_find_code_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editheight"
                android:background="@drawable/btn_red_login"
                android:text="@string/register_telephon_get_code"
                android:textColor="@color/white"
                android:textSize="18dp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/editheight"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_edittext_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/editheight"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:src="@drawable/register_icon_security" />

        <EditText
            android:id="@+id/to_find_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="@string/register_telephon_account_hint"
            android:numeric="integer"
            android:singleLine="true"
            android:textSize="@dimen/login_Size_edittext" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/editheight"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_edittext_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/editheight"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:src="@drawable/register_icon_pwd" />

        <EditText
            android:id="@+id/to_find_password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/register_telephon_password_hint"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/login_Size_edittext" >
        </EditText>

        <ImageView
            android:id="@+id/password_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/editheight"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/to_find_ok"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_red_login"
            android:text="@string/find_password_telephon_ok"
            android:textColor="@color/white"
            android:textSize="18dp" >
        </Button>
    </LinearLayout>


