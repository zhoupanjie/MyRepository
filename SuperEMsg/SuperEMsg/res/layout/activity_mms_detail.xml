<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bgcolor1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/ui_title" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px20"
        android:layout_marginLeft="@dimen/px20"
        android:layout_marginRight="@dimen/px20"
        android:layout_marginTop="@dimen/px50"
        android:gravity="left"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/px440"
        android:layout_height="@dimen/px286"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/item_text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px20"
        android:ellipsize="end"
        android:lines="6"
        android:maxLines="6"
        android:minLines="6"
        android:scrollbars="vertical"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px2"
        android:layout_margin="@dimen/px10"
        android:background="@drawable/lb2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px20"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/px65"
            android:layout_height="@dimen/px40"
            android:background="@drawable/item_btns_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_btn"
                android:layout_width="@dimen/px25"
                android:layout_height="@dimen/px25"
                android:layout_weight="1"
                android:src="@drawable/btn_item_collection" />

            <ImageView
                android:id="@+id/item_btn1"
                android:layout_width="@dimen/px25"
                android:layout_height="@dimen/px25"
                android:layout_weight="1"
                android:src="@drawable/item_share"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/item_btn2"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px40"
            android:background="@drawable/btn_common"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/send"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>