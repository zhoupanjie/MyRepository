<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <include layout="@layout/ui_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="@dimen/px385"
            android:layout_height="@dimen/px499" >

            <ImageView
                android:id="@+id/item_sms"
                android:layout_width="@dimen/px183"
                android:layout_height="@dimen/px183"
                android:layout_marginBottom="@dimen/px28"
                android:background="@drawable/index_sms" />

            <ImageView
                android:id="@+id/item_mms"
                android:layout_width="@dimen/px183"
                android:layout_height="@dimen/px87"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/px18"
                android:background="@drawable/index_mms" />

            <ImageView
                android:id="@+id/item_holiday"
                android:layout_width="@dimen/px183"
                android:layout_height="@dimen/px183"
                android:layout_below="@id/item_sms"
                android:background="@drawable/index_holiday" />

            <ImageView
                android:id="@+id/item_news"
                android:layout_width="@dimen/px183"
                android:layout_height="@dimen/px183"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_mms"
                android:layout_marginBottom="@dimen/px18"
                android:background="@drawable/index_news" />

            <ImageView
                android:id="@+id/item_cartoon"
                android:layout_width="@dimen/px183"
                android:layout_height="@dimen/px87"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_news"
                android:background="@drawable/index_cartoon" />

            <ImageView
                android:id="@+id/item_game"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px77"
                android:layout_alignParentBottom="true"
                android:background="@drawable/index_game" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>