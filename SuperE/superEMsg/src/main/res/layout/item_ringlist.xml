<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="@dimen/px20" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/px130"
            android:layout_height="@dimen/px130"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/px15"
            android:src="@drawable/ring_callout" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_text"
            android:layout_below="@id/item_text"
            android:layout_toRightOf="@id/item_image"
            android:textSize="@dimen/px18" />

        <TextView
            android:id="@+id/item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_text1"
            android:layout_below="@id/item_text1"
            android:layout_toRightOf="@id/item_image"
            android:textSize="@dimen/px18" />

        <TextView
            android:id="@+id/item_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_text2"
            android:layout_below="@id/item_text2"
            android:layout_toRightOf="@id/item_image"
            android:textSize="@dimen/px18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px22"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/px65"
            android:layout_height="@dimen/px40"
            android:background="@drawable/item_btns_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_btn"
                android:layout_width="@dimen/px25"
                android:layout_height="@dimen/px25"
                android:layout_weight="1"
                android:src="@drawable/btn_item_collection" />

            <ImageView
                android:id="@+id/item_btn1"
                android:layout_width="@dimen/px25"
                android:layout_height="@dimen/px25"
                android:layout_weight="1"
                android:src="@drawable/item_share"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/item_btn2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px40"
            android:layout_marginRight="@dimen/px15"
            android:background="@drawable/btn_common"
            android:ems="4"
            android:includeFontPadding="false"
            android:text="设为铃音"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px24" />

        <Button
            android:id="@+id/item_btn3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px40"
            android:background="@drawable/btn_common"
            android:ems="4"
            android:includeFontPadding="false"
            android:text="赠送铃音"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px24" />
    </LinearLayout>

</LinearLayout>