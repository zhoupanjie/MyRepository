<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/ui_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="@dimen/px20" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px20"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人:" />

            <TextView
                android:id="@+id/item_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:maxLines="6" />
        </LinearLayout>

        <EditText
            android:id="@+id/item_input1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="6" />

        <CheckBox
            android:id="@+id/item_check"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px20"
            android:text="是否在发送成功后发送语音祝福？" />

        <Button
            android:id="@+id/item_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px40"
            android:background="@drawable/btn_common"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="发  送"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/rangey/MyRepository/SuperE/superEMsg/src/main/res/layout/activity_send_sms.xml -->